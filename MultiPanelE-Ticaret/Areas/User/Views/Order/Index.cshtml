@model List<MultiPanelE_Ticaret.Core.Entities.Order>

<h2>Siparişlerim</h2>

@if (!Model.Any())
{
    <p>Henüz siparişiniz yok.</p>
}
else
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Tarih</th>
            <th>Durum</th>
        </tr>

        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedAt</td>
                <td>@order.Status</td>
            </tr>
        }
    </table>
}
