@model IEnumerable<MultiPanelE_Ticaret.Core.Entities.Order>

<h2>Siparişlerim</h2>

<p>
    <a href="/User/Order/Create">➕ Yeni Sipariş</a>
</p>

<table border="1" cellpadding="6">
    <thead>
        <tr>
            <th>#</th>
            <th>Durum</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.Status</td>
                <td>@o.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
